@model IEnumerable<LightweightCMS.Models.Element>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Content)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Background)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RowStart)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RowEnd)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ColumnStart)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ColumnEnd)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Content)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Background)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RowStart)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RowEnd)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ColumnStart)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ColumnEnd)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ElementId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ElementId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ElementId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
